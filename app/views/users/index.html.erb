<h1>Users</h1>

<%= link_to 'New User', new_user_path %>

<div class='filters'>
  <%= form_for search, as: :q, url: users_path, method: :get do |f| %>
    <div>
      <%= f.label :first_name_cont, 'First Name' %>
      <%= f.text_field :first_name_cont %>
    </div>

    <div>
      <%= f.label :last_name_cont, 'Last Name' %>
      <%= f.text_field :last_name_cont %>
    </div>

    <div>
      <%= f.label :email_cont, 'Email' %>
      <%= f.text_field :email_cont %>
    </div>

    <div>
      <%= f.label :phone_cont, 'Phone' %>
      <%= f.text_field :phone_cont %>
    </div>

    <div>
      <span>
        <%= f.submit 'Filter' %> |
        <%= button_tag(type: 'button') { link_to 'Clear Filters', users_path } %>
      </span>
    </div>
  <% end %>
</div>

<div class='users'%>
  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th></th>
    </tr>

    <% users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= link_to 'Edit', edit_user_path(user)%></td>
      </tr>
    <% end %>
  </table>
</div>
